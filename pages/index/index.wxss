/**index.wxss**/

.index-wrap{
  height: 100%;
  background-image: linear-gradient(-180deg,#e55442 5%, #e55442 65%,#eb5631 75%, #d64c41 100%);
}


.index-head-container{
  margin-top: 25rpx;
}
.index-head-image {
  width: 600rpx;
}

.index-head-input-img{
  width: 450rpx;
  display: block;
}

.index-head-input-wrap {
  position: relative;
  display: block;
}

.input-label {
  position: absolute;
  top: 60rpx;
  left: 0rpx;
  right: 0rpx;
  display: flex;
  align-items: center;
}

.index-head-text{
  color: #F7F7FA;
}
.index-head-input-title{
  margin: auto;
  width: 100%;
  text-align: center;
  /* font-size: 40rpx; */
  line-height:46rpx;
}
.index-head-input-title-desc{
  margin-top: 40rpx;
  font-size: 22rpx;
}
.index-head-input-context{
  position: absolute;
  top: 123rpx;
  left: 0;
  right: 0;
  bottom: 0;
}

.fortune-input{
  margin-top: 30rpx;
  /*border: 1rpx solid #aaa;*/
  width:472rpx;
  margin:0 auto;
  height:88rpx;
}

.card-list {
  z-index: 1;
  margin: 15rpx 0rpx 15rpx;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;
}

.index-card-label {
  margin-top: 30rpx;
  margin-bottom: 10rpx;
}

.card {
  z-index: 1;
  width: 150rpx;
  margin: 5rpx 15rpx;
}

.card-selected {
  box-shadow:  0px 0px 10px 5px #eadea1;
  /* border: solid 2px #e6c897; */
  border-radius: 2px;
}

.index-logo-img{
  display: block;
  margin-top:40rpx;
  width: 174rpx;
  height: 48rpx;
}